<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startguideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endguidline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="191dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/rood_cardview1"
        android:layout_width="174dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="40dp"

        app:layout_constraintEnd_toEndOf="@id/endguidline1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/startguideline1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="151dp"

            android:layout_height="170dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="145dp"
                android:layout_height="87dp"
                android:cropToPadding="false"
                android:elevation="15dp"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="6dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="45dp"
                android:layout_height="16dp"
                android:layout_marginBottom="4dp"
                android:text="Cost:-"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/numitem1"
                app:layout_constraintHorizontal_bias="0.166"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/numitem1"
                app:layout_constraintTop_toBottomOf="@+id/numitem1"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/name_item1"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="96dp"
                android:elevation="10dp"
                android:gravity="center_horizontal"
                android:text="Text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/numitem1"

                android:layout_width="71dp"
                android:layout_height="23dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/name_item1"
                app:layout_constraintHorizontal_bias="0.761"
                app:layout_constraintStart_toStartOf="@+id/name_item1"
                app:layout_constraintTop_toBottomOf="@+id/name_item1"
                tools:text="nuofitem" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>